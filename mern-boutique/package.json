{
  "name": "mern-boutique",
  "version": "1.0.0",
  "description": "MERN E-Commerce Application",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "node server/server.js",
    "server": "nodemon server/server.js",
    "client": "cd client && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "setup": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "keywords": [
    "mern",
    "ecommerce",
    "boutique",
    "shop",
    "mongodb",
    "express",
    "react",
    "node"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "concurrently": "^8.0.1",
    "multer": "^1.4.5-lts.2",
    "sharp": "^0.34.1",
    "uuid": "^11.1.0",
    "webpack-bundle-analyzer": "^4.10.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
